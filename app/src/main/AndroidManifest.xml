<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reddragon.adam.theclicker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.reddragon.adam.theclicker.WelcomeActivity"
            android:label="@string/Welcome"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reddragon.adam.theclicker.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.reddragon.adam.theclicker.ListActivity1"
            android:label="@string/title_activity_list1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.reddragon.adam.theclicker.ListActivity2"
            android:label="@string/title_activity_list2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>